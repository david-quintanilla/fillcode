@import 'nib'
@import 'normalize.styl'
@import 'icons.styl'
@import 'globals.styl'


/**
 * ---------------------------------------------------------------------------
 * Module header home page
 * ---------------------------------------------------------------------------
 */
 .header
 	position relative
 	.icon-menu
 		color pineapple
 		font-size 3rem
 		position absolute
 		right 1rem
 		top 1.5rem
 	&__section
 		background platonic_nonsense
 		padding 1.5rem
 	&__section .title
 		color pineapple
 		font-size 2rem
 		margin 0
 	&__section .legend
 		color rgba(almost_white .7)
 		margin 0
 	.icon-menu:focus + .header__nav
		display block
		right 0
		left 0
 	&__nav
		background rgba(black .7)
 		display none
		z-index 50
 		.menu
 			font-weight bold
 			list-style-type none
 			margin 0
 			padding 0
 		.menu__item
 			color white
 			padding 1rem 2rem
 			&:first-child
 				margin 0
 				padding-top 1rem
 			&:hover
 				background rgba(pineapple .9)
 				color black
 				transition all .5s ease
 			span
 				font-size 1rem
 				
/**
 * ---------------------------------------------------------------------------
 * Module post home page
 * ---------------------------------------------------------------------------
 */
.container__posts
	padding 1rem
	.post
		position relative
		margin-bottom 2rem
		&__image
			font-size 0
			margin 0
			position relative
			img
				background cover
			.type
				background white
				border-radius 50%
				color platonic_nonsense
				font-weight bold
				height 3rem
				padding .5rem
				position absolute
				right -.7rem
				top -.7rem
				text-align center
				width 3rem
				z-index 8
				span
					display inline-block
					font-size 1rem
					margin-top .8rem
					margin-left -.1rem
				&:hover
					color white
					transition all .5s ease
			.info
				background rgba(black .5)
				color white
				padding .5rem 1rem
				position absolute
				bottom 0
				top 0
				left 0 
				right 0
				.title
					margin-top 4rem
					bottom 0
					color white
					font-size 1.5rem
					font-weight 400
					text-transform uppercase
				.author
					color white
					font-size 1rem
					bottom .5rem
					right 1rem
					position absolute
					z-index 20
		&__footer
			background rgba(black .1)
			border-bottom-left-radius 5px
			border-bottom-right-radius 5px
			display block
			margin 0
			padding .5rem 1rem
			.content
				margin 0
/**
 * ---------------------------------------------------------------------------
 * Module footer home page
 * ---------------------------------------------------------------------------
 */
 .footer
 	background platonic_nonsense
 	border-top 1rem solid pineapple
 	color watercolour 	
 	bottom 0
 	&__social 		 		 		
 		margin 0
 		padding 4rem 0 0 0
 		text-align center 		 		
 		a
 			color white
 			text-decoration none 			
 		span
 			display inline-block
 			font-size 2rem
 			margin 0 .3rem 
 			&:hover 				
 				color pineapple 				
 				transform scale(1.4)
 				transition all 0.7s ease-out 				
 	&__copyright
 		color watercolour
 		padding 0.5rem 0 4rem 0
 		text-align center			